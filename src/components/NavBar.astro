---
import Button from './subComponents/Button.astro';
import DropdownMenu from './subComponents/DropdownMenu.astro';
import ThemeToggle from './subComponents/ThemeToggle.astro';
---

<div
  class="navbar-container sticky top-0 z-10 mb-8 w-full border-b dark:border-slate-400/40 border-slate-400/50 py-4 px-3 sm:px-6 md:px-10 xl:px-14">
  <div class="button-container flex items-center justify-between gap-6">
    <a href="/">
      <img
        src="../astroLogo.svg"
        alt="Astro Logo"
        class="astro-icon w-30 hidden h-8 opacity-80 md:block"
      />
      <img
        src="../astroLogoSmall.svg"
        alt="Astro Logo"
        class="astro-icon h-8 w-8 opacity-80 sm:block md:hidden"
      />
    </a>
    <div class="md:text-md flex lg:text-lg">
      <Button name="Home" link="/" />
      <Button name="About" link="/about" />
      <Button name="Blog" link="/blog" />
      <DropdownMenu
        name="Projects"
        links={[
          { name: 'Minimal Typography', url: '/designProject' },
          { name: 'Old Flask Site', url: '/flaskSite' },
        ]}
      />
      <ThemeToggle />
    </div>
  </div>
</div>
<style>
  :root.dark .astro-icon {
    filter: invert(1); 
  }
</style>