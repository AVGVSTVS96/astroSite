---
import Button from './subComponents/Button.astro';
import DropdownMenu from './subComponents/DropdownMenu.astro';
---

<div
  class="navbar-container sticky top-4 mb-8 mt-4 w-5/6 rounded-lg bg-slate-900 px-4 py-2">
  <div class="button-container flex items-center justify-between gap-6 text-lg">
    <a href="/">
      <img
        src="../astroLogo.svg"
        alt="Astro Logo"
        class="w-30 h-8 opacity-80"
      />
    </a>
    <div class="flex opacity-80">
      <Button name="Home" link="/" />
      <Button name="About" link="/about" />
      <Button name="Blog" link="/posts/firstBlog" />
      <DropdownMenu
        name="Projects"
        linkNames={['Minimal Typography', 'Old Flask Site']}
        urls={['/designProject', '/flaskSite']}
      />
    </div>
  </div>
</div>
