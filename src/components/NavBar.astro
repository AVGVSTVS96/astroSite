---
import Button from "./subComponents/Button.astro";
---

<div
  class="navbar-container sticky top-2 mb-8 mt-4 w-5/6 rounded-lg bg-slate-900 bg-opacity-50 px-4 py-2 backdrop-blur-md">
  <div class="button-container flex items-center justify-between gap-6 text-lg">
    <a href="/">
      <img
        src="../astroLogo.svg"
        alt="Astro Logo"
        class="w-30 h-8 opacity-80"
      />
    </a>
    <div class="flex opacity-80">
      <Button name="Home" link="/" />
      <Button name="About" link="/about" />
      <Button name="Blog" link="/posts/firstBlog" />
      <Button name="Project1" link="/designProject" />
      <Button name="Flask Site" link="/flaskSite" />
    </div>
  </div>
</div>
