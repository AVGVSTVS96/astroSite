---
import Button from './subComponents/Button.astro';
import DropdownMenu from './subComponents/DropdownMenu.astro';
---

<div
  class="navbar-container sticky top-4 z-10 mb-8 mt-4 w-5/6 rounded-lg bg-slate-900 py-2 pl-4 pr-2">
  <div class="button-container flex items-center justify-between gap-6">
    <a href="/">
      <img
        src="../astroLogo.svg"
        alt="Astro Logo"
        class="w-30 h-8 opacity-80 md:block hidden"
      />
      <img
        src="../astro-icon-light.svg"
        alt="Astro Logo"
        class="w-8 h-8 opacity-80 sm:block md:hidden" />
    </a>
    <div class="flex lg:text-lg md:text-md">
      <Button name="Home" link="/" />
      <Button name="About" link="/about" />
      <Button name="Blog" link="/posts/firstBlog" />
      <DropdownMenu
        name="Projects"
        linkNames={['Minimal Typography', 'Old Flask Site']}
        urls={['/designProject', '/flaskSite']}
      />
    </div>
  </div>
</div>
