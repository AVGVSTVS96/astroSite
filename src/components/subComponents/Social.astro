---
const { platform, username, variant } = Astro.props;

interface Props {
  platform: string;
  username?: string;
  variant?: 'linkedIn';
}
---


<a href={`https://www.${variant === 'linkedIn' ? 'linkedin.com/in' : `${platform}.com`}/${username}`}>
  <img
    src={`/${platform}.svg`}
    alt={`${platform} icon`}
    width="22"
    height="22"
    class={`${platform}-icon`}  />
</a>
