---
import DropdownMenu from '../subComponents/DropdownMenu.astro';
---

<header
  class="minimal-navbar-container min-w-full border-b border-slate-400 border-opacity-40">
  <div class="button-container m-5 flex pl-4">
    <a
      href="/"
      class="rounded px-3 py-1 transition duration-200 hover:bg-slate-600 hover:bg-opacity-40">
      <button class="font-semibold">Home</button>
    </a>
    <DropdownMenu
      name="Projects"
      linkNames={['Minimal Typography', 'Old Flask Site']}
      urls={['/designProject', '/flaskSite']}
    />
  </div>
</header>
