---
import MainLayout from '../layouts/MainLayout.astro';
import BlogTimeline from '@components/BlogTimeline.astro';
import Projects from '@components/Projects.astro';
---

<MainLayout
  title="Bassim Shahidy"
  description="Bassim Shahidy's personal website">
  <article class="card-mx card-p max-w-3xl">
    <section id="hero section" class="my-24">
      <h1 class="mb-2 text-[2.5rem] font-extrabold">hi, i'm bassim</h1>
      <h2 class="text-xl font-semibold text-muted-foreground">
        I'm an IT/AV Specialist from New York
      </h2>
    </section>
    <section id="latest posts" class="mb-24"> 
      <h1 class="text-xl font-bold">Latest Posts</h1>
      <div>
        <BlogTimeline postCount={3} lineClamp="line-clamp-2" />
      </div>
    </section>
    <section id="projects">
      <h1 class="mb-6 text-xl font-bold text-foreground">Projects</h1>
      <Projects />
    </section>
  </article>
</MainLayout>
