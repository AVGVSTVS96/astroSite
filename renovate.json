{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":dependencyDashboard",
    ":ignoreModulesAndTests",
    ":rebaseStalePrs",
    ":semanticCommitType(chore)",
    ":separateMajorReleases",
    "group:definitelyTyped",
    "group:monorepos",
    "group:recommended",
    "replacements:all",
    "workarounds:all"
  ],
  "prHourlyLimit": 10,
  "rangeStrategy": "bump",
  "labels": ["dependencies"],
  "commitMessageTopic": "{{depName}}",
  "commitBodyTable": true,
  "timezone": "America/New_York",
  "schedule": ["every 2 weeks on friday at 8pm"],
  "transitiveRemediation": true,
  "packageRules": [
    {
      "groupName": "dev-dependencies",
      "semanticCommitScope": "dev-deps",
      "matchDepTypes": ["devDependencies"],
      "matchPackageNames": ["!/^@types/"]
    },
    {
      "groupName": "Components, icons, fonts, and styling libraries",
      "matchPackageNames": ["cmdk", "lucide-react", "framer-motion", "/^@radix-ui/", "/^@fontsource/"]
    },
    {
      "groupName": "TailwindCSS and related tools",
      "matchPackageNames": ["clsx", "class-variance-authority", "/tailwind/"]
    },
    {
      "groupName": "AI dependencies",
      "matchSourceUrls": ["https://github.com/vercel/ai"],
      "matchPackageNames": ["openai"]
    },
    {
      "groupName": "Astro, Integrations, and Adapters",
      "matchSourceUrls": ["https://github.com/withastro/astro", "https://github.com/withastro/adapters/"],
      "matchPackageNames": ["astro-icon", "sharp"]
    },
    {
      "groupName": "React and related dependencies",
      "matchPackageNames": ["/react/", "!lucide-react", "!/^@types/"]
    }
  ]
}
